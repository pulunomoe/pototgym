{% macro headerClass() %}
	d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-2 pb-1 mb-3 border-bottom
{% endmacro %}

{% macro definitions(definitions, dtmd=3, dtlg=2, ddmd=9, ddlg=10) %}
	<dl class="row mb-0">
		{% for definition in definitions %}
			<dt class="col-md-{{ dtmd }} col-lg-{{ dtlg }}">{{ definition.label }}</dt>
			{% if definition.raw %}
				<dd class="col-md-{{ ddmd }} col-lg-{{ ddlg }}">{{ definition.value|raw }}</dd>
			{% else %}
				<dd class="col-md-{{ ddmd }} col-lg-{{ ddlg }}">{{ definition.value }}</dd>
			{% endif %}
		{% endfor %}
	</dl>
{% endmacro %}

{% macro modalClose(icon='x', label='Close') %}
	<button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
		<span data-feather="{{ icon }}"></span> {{ label }}
	</button>
{% endmacro %}
